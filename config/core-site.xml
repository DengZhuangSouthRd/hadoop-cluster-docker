<?xml version="1.0"?>
<configuration>
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://hadoop-master:9000/</value>
    </property>

    <property>
        <name>fs.trash.interval</name>
        <value>30</value>
        <description>
        Number of minutes between trash checkpoints. If zero, the trash feature is disabled
        </description>
    </property>

    <property>  
        <name>io.file.buffer.size</name>  
        <value>131072</value>  
    </property>
</configuration>
